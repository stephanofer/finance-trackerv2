{
	"$schema": "node_modules/wrangler/config-schema.json",
	"name": "finance-tracker-saas",
	"main": "./src/worker/index.ts",
	"compatibility_date": "2025-10-08",
	"compatibility_flags": [
		"nodejs_compat"
	],
	"routes": [
		{
			"pattern": "fintracker.stephanofer.com",
			"custom_domain": true
		}
	],
	"observability": {
		"enabled": true
	},
	"upload_source_maps": true,
	"assets": {
		"directory": "./dist/client",
		"not_found_handling": "single-page-application"
	},
	"d1_databases": [
		{
			"binding": "finance_tracker_db",
			"database_name": "finance-tracker-saas",
			"database_id": "f50beaba-dde2-4383-bb4c-f66e637020f6"
		}
	],
	"r2_buckets": [
		{
			"bucket_name": "finance-tracker-saas",
			"binding": "finance_tracker_bucket",
		}
	]
	/**
   * Smart Placement
   * https://developers.cloudflare.com/workers/configuration/smart-placement/#smart-placement
   */
